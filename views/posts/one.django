{% include "partials/header.django" %}

<style>
    .post img { 
        max-width: 100%; 
        height: auto; 
    }
    
</style>

<div class="post" style="max-width: 680px; word-wrap: anywhere; margin: 0 auto;">
    <h1>{{ Post.Title }}</h1> 
    <h2>{{ Post.Subtitle }}</h2> 
    <p>{{ formatDate(Post.CreatedAt) }}</p> 
    <hr/>
    {{ Post.Body }} 
</div>


